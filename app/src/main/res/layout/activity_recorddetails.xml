<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecorddetailsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="200dp"
            android:layout_height="200dp"


            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_baseline_add_a_photo_24"
            android:layout_marginTop="10dp">

        </ImageView>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="2">
            <TableRow>
                <TextView
                    android:id="@+id/titletv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_span="3"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:hint="TITLE"
                    android:textAlignment="center"
                    android:textColor="@color/black">

                </TextView>

            </TableRow>
            <TableRow>
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="CATEGORY"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:textColor="@color/black">

                </TextView>
                <TextView
                    android:id="@+id/categorytv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:textColor="@color/black">

                </TextView>


            </TableRow>
            <TableRow>
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="DESCREPTION"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:textColor="@color/black">

                </TextView>
                <TextView
                    android:id="@+id/descreptiontv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:textColor="@color/black">

                </TextView>


            </TableRow>
            <TableRow>
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="PRIX"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:textColor="@color/black">

                </TextView>
                <TextView
                    android:id="@+id/prixtv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:textColor="@color/black">

                </TextView>


            </TableRow>
            <TableRow>
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="TELEPHONE"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:textColor="@color/black">

                </TextView>
                <TextView
                    android:id="@+id/teltv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:textColor="@color/black">

                </TextView>


            </TableRow>
            <TableRow>
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Vendeur"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:textColor="@color/black">

                </TextView>
                <TextView
                    android:id="@+id/usertv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:textColor="@color/black">

                </TextView>


            </TableRow>
        </TableLayout>
        <ImageButton
            android:id="@+id/btn_tel"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="62dp"
            android:layout_marginTop="36.7dp"
            android:layout_marginRight="62dp"
            android:backgroundTint="#008000"
            android:background="@drawable/blue_border_rounded_cornwe"
            android:src="@drawable/ic_baseline_local_phone_24"></ImageButton>
        <ImageButton
            android:id="@+id/btn_msg"
            android:layout_marginLeft="62dp"
          android:background="@drawable/blue_border_rounded_cornwe"
            android:layout_marginRight="62dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:backgroundTint="#FFD700"
            android:src="@drawable/ic_baseline_message_24"></ImageButton>
    </LinearLayout>






</ScrollView>

